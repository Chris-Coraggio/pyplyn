{
  "global": {
    "configurationsPath": "./config/configurations",
    "connectorsPath": "./config/connectors.json",
    "runOnce": false,
    "updateConfigurationIntervalMillis": 300000
  },

  "alert": {
    "enabled": false,
    "checkIntervalMillis": 60000,
    "thresholds": {
      "RefocusExtractSuccessWARN": 50,
      "RefocusExtractSuccessCRIT": 25,
      "RefocusExtractFailureWARN": 10,
      "RefocusExtractFailureCRIT": 20,
      "RefocusExtractNoDataReturnedWARN": 25,
      "RefocusExtractNoDataReturnedCRIT": 50,
      "RefocusAuthenticationFailureWARN": 5,
      "RefocusAuthenticationFailureCRIT": 10,
      "ArgusExtractSuccessWARN": 200,
      "ArgusExtractSuccessCRIT": 100,
      "ArgusExtractFailureWARN": 10,
      "ArgusExtractFailureCRIT": 20,
      "ArgusExtractNoDataReturnedWARN": 25,
      "ArgusExtractNoDataReturnedCRIT": 50,
      "ArgusAuthenticationFailureWARN": 1,
      "ArgusAuthenticationFailureCRIT": 2,
      "RefocusLoadFailureWARN": 10,
      "RefocusLoadFailureCRIT": 20,
      "ConfigurationUpdateFailureCRIT": 1
    }
  },

  "hazelcast": {
    "enabled": false,
    "config": "/hazelcast.xml"
  }
}
